<h1 class="text-center mt-4">Sfera Bloggers</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "Ver perfil", user, class: "btn btn-outline-success" %>
            <%= link_to "Editar perfil", edit_user_path(user), class: "btn btn-outline-info" %>
          </div>
          <div class="card-footer text-muted">
            <small>Entrou a <%= time_ago_in_words(user.created_at, include_seconds: true, locale: 'pt-BR') %> atr√°s</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>