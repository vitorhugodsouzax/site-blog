<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, "Titulo", class: "col-2 col-form-label text-light" %>
           <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Titulo do artigo" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, "Descrição", class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descrição do artigo" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Salvar",class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
     <div class="mb-3">
      <%= link_to '[ Cancelar e retornar a lista de artigos ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>